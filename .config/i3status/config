general {
    colors = true
    color_good = "#00FF00"
    interval = 1
}

order += "disk /"
order += "disk /home/dev"
order += "run_watch DHCP"
order += "ethernet eth0"
order += "volume master"
order += "load"
order += "time"

ethernet eth0 {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

time {
	format = "%Y-%m-%d %H:%M:%S"
}

volume master {
    format = "â™ª: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

load {
	format = "%1min"
}

disk "/" {
	format = "%free"
}

disk "/home/dev" {
	format = "%free"
}
